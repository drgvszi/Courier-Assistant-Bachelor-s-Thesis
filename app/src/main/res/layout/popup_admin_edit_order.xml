<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/popup_dialog">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="25dp"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/orderNameTextView"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit the Package #"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/order_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:autofillHints="" />
    </LinearLayout>

    <EditText
        android:id="@+id/user_mail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:hint="Courier e-mail"
        android:inputType="textEmailAddress"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:layout_marginHorizontal="25dp"
        android:autofillHints="" />

    <EditText
        android:id="@+id/order_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:hint="Order Status"
        android:inputType="text"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:layout_marginHorizontal="25dp"
        android:autofillHints="" />

    <EditText
        android:id="@+id/order_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:hint="Order description"
        android:inputType="text"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:layout_marginHorizontal="25dp"
        android:autofillHints="" />

    <EditText
        android:id="@+id/delivery_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:hint="Deliver to"
        android:inputType="text"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:layout_marginHorizontal="25dp"
        android:autofillHints="" />

    <EditText
        android:id="@+id/order_client_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:hint="Client name"
        android:inputType="text"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:layout_marginHorizontal="25dp"
        android:autofillHints="" />

    <EditText
        android:id="@+id/order_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:hint="Phone number"
        android:inputType="phone"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:layout_marginHorizontal="25dp"
        android:autofillHints="" />

    <EditText
        android:id="@+id/client_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:hint="Client e-mail"
        android:inputType="textEmailAddress"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:layout_marginHorizontal="25dp"
        android:autofillHints="" />


    <EditText
        android:id="@+id/additional_information"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:hint="Additional information"
        android:inputType="text"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:layout_marginHorizontal="25dp"
        android:autofillHints="" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginHorizontal="25dp">
        <EditText
            android:id="@+id/edit_text_limit_order_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Select Limit Order Date"
            android:inputType="datetime"
            android:focusable="false"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:autofillHints="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginHorizontal="25dp"
        >
        <EditText
            android:id="@+id/pay_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:hint="Pay type"
            android:inputType="text"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:layout_marginEnd="10dp"
            android:autofillHints="" />
        <EditText
            android:id="@+id/pay_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:hint="Pay status"
            android:inputType="text"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:layout_marginHorizontal="5dp"
            android:autofillHints="" />
        <EditText
            android:id="@+id/order_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:hint="Price"
            android:inputType="number"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:layout_marginHorizontal="10dp"
            android:autofillHints="" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="25dp"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/force_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Force delivery"
            android:textColorHint="@color/white"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginVertical="15dp"
        android:layout_gravity="center">

            <Button
                android:id="@+id/complete_order"
                android:layout_width="100dp"
                android:layout_height="48dp"
                android:backgroundTint="@color/Finish_buttons"
                android:text="Complete"
                android:textColor="@color/white"
                style="?android:attr/buttonBarButtonStyle"
                />

            <Button
                android:id="@+id/cancel_button"
                android:layout_width="100dp"
                android:layout_height="48dp"
                android:backgroundTint="@color/Cancel_buttons"
                android:text="Cancel"
                android:textColor="@color/white"
                style="?android:attr/buttonBarButtonStyle"
                />

        </LinearLayout>

</LinearLayout>
